import time
import RPi.GPIO as GPIO

# Definition des pins

GPIO.setmode(GPIO.BCM)

GPIO.setup(2, GPIO.IN, GPIO.PUD_DOWN)
GPIO.setup(3, GPIO.IN, GPIO.PUD_DOWN)
GPIO.setup(14, GPIO.IN, GPIO.PUD_DOWN)

# Boucle infinie
def detectionBouton ():
    while True:
        etat = GPIO.input(2)
        etat2 = GPIO.input(3)
        etat3 = GPIO.input(14)

        # etat==1 => bouton appuye => LED allumee
        if (etat == 1) and (etat2 == 0) and (etat3 == 0) :
            print("Appui detecte du 2 bouton")
            valeurdubouton = 0
            return valeurdubouton
        elif (etat == 0) and (etat2 == 1) and (etat3 == 0) :
            print ("Appui detecte du 1 bouton")
            valeurdubouton = 1
            return valeurdubouton
        elif (etat3 == 1) and (etat2 == 0) and (etat == 0):
            print ("Appui detecte du 3 bouton")
            valeurdubouton = 2
            return valeurdubouton

        else :
            print("Appui pas detecte")

        # Temps de repos pour eviter la surchauffe du processeur
        time.sleep(0.1)

detectionBouton()
